{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["*"]
    },
    "types": ["react-native", "jest"],
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "include": [
    "app/**/*",
    "components/**/*",
    "assets/**/*",
    "utils/**/*",
    "types/**/*",
    "services/**/*",
    "providers/**/*",
    "mocks/**/*",
    "test-utils/**/*",
    "hooks/**/*",
    "lib/**/*",
    "*.ts",
    "*.tsx",
    "nativewind-env.d.ts",
    "global.d.ts",
    "**/*.test.ts",
    "**/*.test.tsx",
    "services"
  ],
  "exclude": [
    "node_modules/**/*",
    "**/node_modules/*",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    ".expo",
    "android",
    "ios",
    "dist",
    "build"
  ]
}
